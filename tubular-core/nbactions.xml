<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-izPack</actionName>
            <displayName>izPack</displayName>
            <goals>
                <goal>izpack:izpack</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-assemble</actionName>
            <displayName>assemble</displayName>
            <goals>
                <goal>appassembler:assemble</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.args>-classpath %classpath org.trancecode.xproc.cli.CommandLineExecutor -xpl src\main\resources\org\trancecode\xproc\xproc-1.0.xpl</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath org.trancecode.xproc.cli.CommandLineExecutor -xpl src\main\resources\org\trancecode\xproc\xproc-1.0.xpl</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -classpath %classpath org.trancecode.xproc.cli.CommandLineExecutor -xpl src\main\resources\org\trancecode\xproc\xproc-1.0.xpl</exec.args>
                <profiler.action>profile</profiler.action>
                <exec.executable>${profiler.java}</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-shade</actionName>
            <displayName>shade</displayName>
            <goals>
                <goal>shade:shade</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-package</actionName>
            <displayName>package</displayName>
            <goals>
                <goal>package</goal>
            </goals>
        </action>
    </actions>
